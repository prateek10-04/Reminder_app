<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder_activity"
    android:background="@color/white">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:layout_centerInParent="true"
    app:cardBackgroundColor="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_parent_rel">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newreminderTxt"
        android:text="New Reminder"
        android:textSize="25dp"
        android:textColor="@color/white"
        style="bold"
        android:padding="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the name of the task"
        android:textSize="15sp"
        android:layout_below="@+id/newreminderTxt"
        android:layout_marginTop="20dp"
        android:id="@+id/taskAddTxt"
        android:layout_centerHorizontal="true"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/taskAddTxt"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/timedateAddLinear">

            <Button
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:text="Add Date"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/btnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:text="Add Time"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timedateAddLinear"
            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnAdd"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>




</RelativeLayout>